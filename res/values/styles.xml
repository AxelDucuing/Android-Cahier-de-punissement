<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/punition_app_background</item>
        <item name="android:textColor">@color/punition_app_text</item>
    </style>

    <style name="textViewTheme" parent="TextAppearance.AppCompat">
         <item name = "android:textColor">@color/punition_textView_text</item>
         <item name = "android:background">@color/punition_textView_background</item>
         <item name = "android:padding">20dp</item>
         <item name = "android:textSize">25sp</item>
    </style>
    <style name="spinnerTheme" parent="TextAppearance.AppCompat">
        <item name= "android:layout_marginStart">8dp</item>
        <item name= "android:layout_marginTop">8dp</item>
        <item name= "android:layout_marginEnd">8dp</item>

    </style>
</resources>